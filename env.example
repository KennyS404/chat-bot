# OpenAI Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
WHISPER_MODEL=whisper-1
GPT_MODEL=gpt-3.5-turbo
TTS_MODEL=tts-1
TTS_VOICE=nova

# DeepSeek Configuration (Opcional - para economizar 90% nos custos de correção)
DEEPSEEK_API_KEY=YOUR_DEEPSEEK_API_KEY_HERE
DEEPSEEK_MODEL=deepseek-chat

# AI Mode Configuration
# openai = Usar apenas OpenAI (padrão atual)
# hybrid = OpenAI para áudio + DeepSeek para correção (recomendado para economia)
# deepseek = Usar apenas DeepSeek para texto (sem áudio)
AI_MODE=hybrid
FALLBACK_TO_OPENAI=true

# WhatsApp Configuration
SESSION_NAME=whatsapp-bot

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Audio Configuration
MAX_AUDIO_DURATION=120
ENABLE_AUDIO_RESPONSE=true

# Database Configuration
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

STORAGE_MAX_FILE_SIZE=10485760
STORAGE_COMPRESSION_ENABLED=true
STORAGE_COMPRESSION_MAX_SIZE=1048576
STORAGE_COMPRESSION_QUALITY=0.8

# Logging Configuration
LOG_LEVEL=info

# Configurações de log
LOG_LEVEL=info

# Diretório para armazenar arquivos temporários
TEMP_DIR=./temp

# Modelo da OpenAI para Text-to-Speech (tts-1 é mais rápido, tts-1-hd tem mais qualidade)
TTS_MODEL=tts-1

# Voz para Text-to-Speech (alloy, echo, fable, onyx, nova, shimmer)
# nova é a mais natural para português
TTS_VOICE=nova

# Habilitar resposta em áudio (true/false)
ENABLE_AUDIO_RESPONSE=true 